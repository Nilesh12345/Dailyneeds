<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gondia.dailyneeds.Login.Login"
    android:orientation="vertical"
    android:id="@+id/awesome"
    tools:showIn="@layout/activity_login"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/etusername"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:id="@+id/etpassword"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btlogin"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fa_google"
        android:onClick="naresh"
        android:textColor="#ce0b0b"
        android:textSize="40sp"
        android:id="@+id/gplusloginbt"
        android:background="#d6cece"/>
   <!-- <com.facebook.login.widget.LoginButton
        android:id="@+id/fbbt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip login"
        android:layout_gravity="center"
        android:id="@+id/skipToMain"/>



</LinearLayout>
